{% for question in questions %}
	<div class="accordion-item">
		<div class="d-flex justify-content-between">
			<div class="accordion-header w-100" id="heading-{{question.id}}">
				{% if question.status %}
					<span class="badge rounded-pill bg-success m-1">Visible</span>
				{% else %}
					<span class="badge rounded-pill bg-secondary m-1">Cach√©e</span>
				{% endif %}
				<h2>
					<button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#response-{{question.id}}" aria-expanded="false" aria-controls="response-{{question.id}}">
						{{question.label}}
					</button>
				</h2>
			</div>
			<div class="d-flex  flex-column flex-md-row justify-content-center align-items-center px-3">
				<a class="btn btn-primary m-1" href="{{ path('question-edit',{id: question.id}) }}" role="button">Editer</a>
				<a class="btn btn-danger m-1" href="{{ path('question-delete',{id: question.id}) }}" role="button">Supprimer</a>
			</div>
		</div>

		<div id="response-{{question.id}}" class="accordion-collapse collapse" aria-labelledby="heading-{{question.id}}" data-bs-parent="#faq">
			<div class="accordion-body">
				<div>{{question.response}}</div>
				<div class="pt-3">
					{% for category in question.categories %}
						<a href="{{path('question-category',{id: category.id})}}" role="button" class="btn btn-warning btn-sm rounded-pill text-dark">{{category.label}}</a>
					{% endfor %}
				</div>
			</div>
		</div>
	</div>
{% endfor %}
